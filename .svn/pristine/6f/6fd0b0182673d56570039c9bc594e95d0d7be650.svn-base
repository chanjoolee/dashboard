                            	and cb.code_id = ph.up_phase_id
                            left outer join (
                                    SELECT
                                            *
                                        FROM
                                            pjt_act
                                        WHERE
                                            act_type = 'NPM_00000137'
                                ) pa 
                                	on ph.pjt_phase_id = pa.pjt_phase_id
                                	AND ph.pjt_id = pa.pjt_id
                            WHERE
                                ph.use_yn = 'Y'
                                /* AND ph.islatest = 'Y' */          
                                and ph.UP_PHASE_ID is not null  
                                and info.pjt_id = #{pjt_code}          
                       ) 
                       WHERE display = 'Y'
                       and phase_seq = 1
                       /* and pjt_name = 'Mercury + QS 64G MLC' */        

    </select>
    
</mapper>